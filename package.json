{
  "name": "lyric-display-app",
  "version": "4.0.0",
  "description": "Real-time lyric display app with control panel and multiple output displays",
  "author": "Peter Alakembi",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "server": "node server/index.js",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron": "electron .",
    "electron-pack": "npm run build && electron-builder",
    "electron-publish": "npm run build && electron-builder --publish=always"
  },
  "dependencies": {
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "express": "^4.21.2",
    "keytar": "^7.9.0",
    "lucide-react": "^0.372.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.7.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^37.2.5",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^4.5.14",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.lyricdisplay",
    "productName": "LyricDisplay",
    "files": [
      "dist/**/*",
      "server/**/*",
      "main/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "public/favicon.ico"
    ],
    "directories": {
      "buildResources": "public"
    },
    "asarUnpack": [
      "dist/**/*",
      "server/**/*",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "server/node_modules",
        "to": "app.asar.unpacked/server/node_modules"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/favicon.ico",
      "uninstallerIcon": "public/favicon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LyricDisplay"
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "icon": "public/favicon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "category": "public.app-category.music",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/favicon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/favicon.ico",
      "category": "AudioVideo"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "PeterAlaks",
        "repo": "lyric-display-updates"
      }
    ]
  }
}